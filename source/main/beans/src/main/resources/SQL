create database rolecoll;

use rolecoll;

create table USERS(USER_ID INTEGER NOT NULL AUTO_INCREMENT PRIMARY KEY, USER_FIRST_NAME VARCHAR(50),
USER_LAST_NAME VARCHAR(50), USER_LOGIN_NAME VARCHAR(50),
USER_ROLE VARCHAR(50), USER_ROLE_NAME VARCHAR(50),
USER_SUPERIOR_ID VARCHAR(50), USER_PASSWORD VARCHAR(50),
USER_IS_ADMIN BOOLEAN);

insert into Users(
USER_LOGIN_NAME,
USER_PASSWORD,
USER_IS_ADMIN) Values ('admin', 'intuit456', true);

CREATE TABLE DOCUMENTS(DOCUMENT_ID INTEGER NOT NULL AUTO_INCREMENT PRIMARY KEY,
DOCUMENT_NAME VARCHAR(50), IMAGE_LIST BLOB);

CREATE TABLE NOTES(NOTE_ID INTEGER NOT NULL AUTO_INCREMENT PRIMARY KEY, 
DOCUMENT_ID INTEGER, PAGE_NUMBER INTEGER,
NOTE_LOCATION_X INTEGER, NOTE_LOCATION_Y INTEGER,
NOTE_HEIGHT INTEGER, NOTE_WIDTH INTEGER,
NOTE_CLASS VARCHAR(50), NOTE_CONTENT BLOB,
NOTE_FONT VARCHAR(50), NOTE_COLOR VARCHAR(50),
USER_PRIORITY VARCHAR(10), USER_ID INTEGER);

grant all on rolecoll.* to root@192.168.2.12 identified by '1234';

